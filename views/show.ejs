<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All user</title>
    <style>
        table,tr,td,th{
            border: 1px solid black;
        }
    </style>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th colspan="3">Username</th>
        </tr>
        <tbody>
            <% for(user of users) {%>
            <tr>
                <td><%= user.id%></td>
                <td><%= user.email%></td>
                <td><%= user.username%></td>
                <td>
                  <form method="GET" action="/user/<%=user.id%>/edit">
                    <button>Edit username</button>
                  </form>
                </td>
                <td>
                  <form method="GET" action="/user/<%=user.id%>/delete">
                    <button>Delete user</button>
                  </form>
                </td>
            </tr>
            <%}%>
        </tbody>
      </thead>
    </table>
  </body>
</html>
